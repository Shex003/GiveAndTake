<div class="container">
  <h1>New Item</h1>

  <%= simple_form_for item do |f| %>
  <div class="raw main">
    <div class="col-5">
      <%= f.input :name %>
    </div>
    <div class="col-5">
      <%= f.input :price, hint: 'Prices should be in EUR' %>
    </div>
  </div>

  <div class="item-desc">
    <div class="col-11">
      <%= f.input :description, hint: 'Detailed descriptions work better' %>
    </div>
  </div>

  <div class="raw main">
    <div class="col-5">
      <%= f.input :category, hint: 'musical instruments, household items, electronics' %>
    </div>
    <div class="col-5">
      <%= f.input :photo, as: :file %>
    </div>
  </div>
  <div>
  <div style="margin-left:50px;"class="mt-3 ">
      <%= f.submit "Create new item", class: "btn btn-outline-primary" %>
  </div>
  <% end %>

  <div style="margin-left:50px;" class="mt-3">
    <%= link_to "go back to items", items_path %>
  </div>
</div>
</div>
